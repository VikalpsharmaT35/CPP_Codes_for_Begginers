#include<iostream>
#include<conio.h>
using namespace std;
int main()
{
	double long i,j,k,f=1;
	int a,b,c;
	cout<<"Enter the Number till where you want to find the factorial : ";
	cin>>i;
	for(k=1;k<i+1;k++)
	{
		for(j=1;j<k+1;j++)
		{
			f=f*j;
		}
		cout<<"The factorial of "<<k<<" is : "<<f<<"\n";
	}
	
	return 0;
}
